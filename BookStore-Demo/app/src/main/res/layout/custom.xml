<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <Button
      android:id="@+id/btnCall"
      android:layout_width="159dp"
      android:layout_height="48dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="12dp"
      android:text="call"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:background="#4CAF50"
      android:textColor="#ffffff"/>

  <Button
      android:id="@+id/btnMail"
      android:layout_width="157dp"
      android:layout_height="48dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="12dp"
      android:text="Send mail"
      app:layout_constraintLeft_toRightOf="@+id/btnCall"
      app:layout_constraintTop_toTopOf="parent"
      android:background="#254"
      android:textColor="#ffffff"/>

  <ImageView
      android:id="@+id/btnFavourate"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginTop="29dp"
      app:layout_constraintTop_toBottomOf="@+id/tvAddressDisplay"
      android:src="@drawable/star"
      tools:ignore="MissingConstraints"
      android:paddingLeft="8dp"/>

  <Button
      android:id="@+id/btnDownload"
      android:layout_width="108dp"
      android:layout_height="95dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="0dp"
      android:background="#FAFAFA"
      android:drawableTop="@drawable/download1"
      android:text="Download"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintLeft_toRightOf="@+id/btnFavourate"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvAddressDisplay"
      tools:layout_editor_absoluteX="260dp"
      style="?android:attr/borderlessButtonStyle"/>

  <ImageView
      android:id="@+id/ivbook"
      android:layout_width="358dp"
      android:layout_height="136dp"
      android:layout_marginLeft="13dp"
      android:layout_marginTop="8dp"
      app:layout_constraintDimensionRatio="w,1:1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnMail"
      app:srcCompat="@drawable/book_image"
      />

  <TextView
      android:id="@+id/tvAddressDisplay"
      android:layout_width="236dp"
      android:layout_height="25dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="42dp"
      android:textColor="#000"
      android:textSize="15dp"
      app:layout_constraintHorizontal_bias="0.384"
      app:layout_constraintLeft_toRightOf="@+id/tvName"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivbook"
      />

  <TextView
      android:id="@+id/tvName"
      android:layout_width="98dp"
      android:layout_height="25dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="10dp"
      android:text="Name     :"
      android:textColor="#000"
      android:textSize="18dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivbook"/>

  <TextView
      android:id="@+id/tvNameDisplay"
      android:layout_width="239dp"
      android:layout_height="25dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="0dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:textColor="#000"
      android:textSize="15dp"
      app:layout_constraintHorizontal_bias="0.304"
      app:layout_constraintLeft_toRightOf="@+id/tvName"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ivbook"
      />

  <TextView
      android:id="@+id/tvAddress"
      android:layout_width="94dp"
      android:layout_height="25dp"
      android:layout_marginLeft="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:text="Address :"
      android:textColor="#000"
      android:textSize="18dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvName"/>


  <View
      android:id="@+id/viewline"
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="37dp"
      android:background="@android:color/black"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnFavourate"
      />


</androidx.constraintlayout.widget.ConstraintLayout>